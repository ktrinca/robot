<h1>Listado de Casos</h1>
<%= link_to "download", {:controller => 'cases', :action => :download, :id => 'f'}%>

<table>
  <tr>
    <th>Title</th>
    <th>Nature</th>
    <th>date</th>
    <th>Subtitle</th>
    <th>Picture</th>
    <th>Description</th>
    <th>Link</th>
    <th>Credit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cases.each do |c| %>
  <tr>
    <td><%= c.title %></td>
    <td><%= c.nature %></td>
    <td><%= c.date %></td>
    <td><%= c.subtitle %></td>
    <td><%= c.description %></td>
    <td><%= c.link %></td>
    <td><%= c.credit %></td>
    <td><%= link_to 'Show', c %></td>
    <td><%= link_to 'Edit', edit_case_path(c) %></td>
    <td><%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

